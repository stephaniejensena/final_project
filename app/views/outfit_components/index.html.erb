<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all outfit components
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new outfit component
    </h2>

    <form action="/insert_outfit_component" method="post">
      <div class="form-group">
        <label for="clothing_item_id_box">
          Clothing item
        </label>

        <input type="text" id="clothing_item_id_box" name="clothing_item_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="outfit_id_box">
          Outfit
        </label>

        <input type="text" id="outfit_id_box" name="outfit_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create outfit component
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Clothing item
        </th>

        <th>
          Outfit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @outfit_components.each do |outfit_component| %>
      <tr>
        <td>
          <%= outfit_component.id %>
        </td>

        <td>
          <%= outfit_component.clothing_item_id %>
        </td>

        <td>
          <%= outfit_component.outfit_id %>
        </td>

        <td>
          <%= time_ago_in_words(outfit_component.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(outfit_component.updated_at) %> ago
        </td>

        <td>
          <a href="/outfit_components/<%= outfit_component.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
