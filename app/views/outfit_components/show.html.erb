<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Outfit component #<%= @outfit_component.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/outfit_components" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_outfit_component/<%= @outfit_component.id %>" class="btn btn-block btn-outline-secondary">
          Delete outfit component
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Clothing item
      </dt>
      <dd>
        <%= @outfit_component.clothing_item_id %>
      </dd>

      <dt>
        Outfit
      </dt>
      <dd>
        <%= @outfit_component.outfit_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@outfit_component.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@outfit_component.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit outfit component
    </h2>

    <form action="/modify_outfit_component/<%= @outfit_component.id %>"  method="post" >
      <div class="form-group">
        <label for="clothing_item_id_box">
          Clothing item
        </label>

        <input type="text" id="clothing_item_id_box" name="clothing_item_id_from_query" class="form-control" value="<%= @outfit_component.clothing_item_id %>">
      </div>

      <div class="form-group">
        <label for="outfit_id_box">
          Outfit
        </label>

        <input type="text" id="outfit_id_box" name="outfit_id_from_query" class="form-control" value="<%= @outfit_component.outfit_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update outfit component
      </button>
    </form>
  </div>
</div>

<hr>
