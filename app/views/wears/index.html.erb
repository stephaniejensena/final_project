<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all wears
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new wear
    </h2>

    <form action="/insert_wear" method="post">
      <div class="form-group">
        <label for="image_id_box">
          Image
        </label>

        <input type="text" id="image_id_box" name="image_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="outfit_id_box">
          Outfit
        </label>

        <input type="text" id="outfit_id_box" name="outfit_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create wear
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Outfit
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wears.each do |wear| %>
      <tr>
        <td>
          <%= wear.id %>
        </td>

        <td>
          <%= wear.image_id %>
        </td>

        <td>
          <%= wear.outfit_id %>
        </td>

        <td>
          <%= time_ago_in_words(wear.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(wear.updated_at) %> ago
        </td>

        <td>
          <a href="/wears/<%= wear.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
