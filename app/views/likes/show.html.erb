<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Like #<%= @like.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/likes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_like/<%= @like.id %>" class="btn btn-block btn-outline-secondary">
          Delete like
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Liker
      </dt>
      <dd>
        <%= @like.liker_id %>
      </dd>

      <dt>
        Post
      </dt>
      <dd>
        <%= @like.post_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@like.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit like
    </h2>

    <form action="/modify_like/<%= @like.id %>"  method="post" >
      <div class="form-group">
        <label for="liker_id_box">
          Liker
        </label>

        <input type="text" id="liker_id_box" name="liker_id_from_query" class="form-control" value="<%= @like.liker_id %>">
      </div>

      <div class="form-group">
        <label for="post_id_box">
          Post
        </label>

        <input type="text" id="post_id_box" name="post_id_from_query" class="form-control" value="<%= @like.post_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update like
      </button>
    </form>
  </div>
</div>

<hr>
