<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all outfit tags
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new outfit tag
    </h2>

    <form action="/insert_outfit_tag" method="post">
      <div class="form-group">
        <label for="outfit_id_box">
          Outfit
        </label>

        <input type="text" id="outfit_id_box" name="outfit_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="image_id_box">
          Image
        </label>

        <input type="text" id="image_id_box" name="image_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create outfit tag
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Outfit
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @outfit_tags.each do |outfit_tag| %>
      <tr>
        <td>
          <%= outfit_tag.id %>
        </td>

        <td>
          <%= outfit_tag.outfit_id %>
        </td>

        <td>
          <%= outfit_tag.image_id %>
        </td>

        <td>
          <%= time_ago_in_words(outfit_tag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(outfit_tag.updated_at) %> ago
        </td>

        <td>
          <a href="/outfit_tags/<%= outfit_tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
