<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit clothing item
    </h2>

    <form action="/modify_clothing_item/<%= @clothing_item.id %>"  method="post" >
      <div class="form-group">
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="name_from_query" class="form-control" value="<%= @clothing_item.name %>">
      </div>

      <div class="form-group">
        <label for="color_box">
          Color
        </label>

        <input type="text" id="color_box" name="color_from_query" class="form-control" value="<%= @clothing_item.color %>">
      </div>

      <div class="form-group">
        <label for="pattern_box">
          Pattern
        </label>

        <input type="text" id="pattern_box" name="pattern_from_query" class="form-control" value="<%= @clothing_item.pattern %>">
      </div>

      <div class="form-group">
        <label for="material_box">
          Material
        </label>

        <input type="text" id="material_box" name="material_from_query" class="form-control" value="<%= @clothing_item.material %>">
      </div>

      <div class="form-group">
        <label for="size_box">
          Size
        </label>

        <input type="text" id="size_box" name="size_from_query" class="form-control" value="<%= @clothing_item.size %>">
      </div>

      <div class="form-group">
        <label for="brand_box">
          Brand
        </label>

        <input type="text" id="brand_box" name="brand_from_query" class="form-control" value="<%= @clothing_item.brand %>">
      </div>

      <div class="form-group">
        <label for="retailer_box">
          Retailer
        </label>

        <input type="text" id="retailer_box" name="retailer_from_query" class="form-control" value="<%= @clothing_item.retailer %>">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control" value="<%= sprintf('%.2f', @clothing_item.price) %>">
      </div>

      <div class="form-group">
        <label for="price_units_box">
          Price units
        </label>

        <input type="text" id="price_units_box" name="price_units_from_query" class="form-control" value="<%= @clothing_item.price_units %>">
      </div>

      <div class="form-group">
        <label for="date_purchased_box">
          Date purchased
        </label>

        <input type="date" id="date_purchased_box" name="date_purchased_from_query" class="form-control" value="<%= @clothing_item.date_purchased %>">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="category_from_query" class="form-control" value="<%= @clothing_item.category %>">
      </div>

      <div class="form-group">
        <label for="quantity_box">
          Quantity
        </label>

        <input type="text" id="quantity_box" name="quantity_from_query" class="form-control" value="<%= @clothing_item.quantity %>">
      </div>

      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="description_from_query" class="form-control" rows="3"><%= @clothing_item.description %></textarea>
      </div>



      <button class="btn btn-block btn-outline-secondary">
        Update clothing item
      </button>
    </form>
  </div>
</div>
