<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all comments
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new comment
    </h2>

    <form action="/insert_comment" method="post">
      <div class="form-group">
        <label for="commenter_id_box">
          Commenter
        </label>

        <input type="text" id="commenter_id_box" name="commenter_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="post_id_box">
          Post
        </label>

        <input type="text" id="post_id_box" name="post_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="content_box">
          Content
        </label>

        <textarea id="content_box" name="content_from_query" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create comment
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Commenter
        </th>

        <th>
          Post
        </th>

        <th>
          Content
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment.id %>
        </td>

        <td>
          <%= comment.commenter_id %>
        </td>

        <td>
          <%= comment.post_id %>
        </td>

        <td>
          <%= comment.content %>
        </td>

        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(comment.updated_at) %> ago
        </td>

        <td>
          <a href="/comments/<%= comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
